   <td>{{ souscripteur.villeresidence }}</td>
   </tr>
   <tr>
   <td>Adresse Complète</td>
   <td>
   {{ souscripteur.adresse }} <br/>
   {{ souscripteur.codepostal }} <br/>
   {{ souscripteur.ville }}
   </td>
   </tr>
   <tr>
   <td>Téléphone</td>
   <td>{{ souscripteur.telephone }}</td>
   </tr>
   <tr>
   <td>Téléphone fixe</td>
   <td>{{ souscripteur.teldomicile }}</td>
   </tr>

   <tr>
   <td>Vos enfants</td>
   <td>
   {% for enf in souscripteur.enfants %}
   {{ enf.nom }} {{ enf.prenom }} <br/> 
   Née le : {{ enf.datenaissance|date('d-m-Y') }} <br/><br/>
   {% endfor %}
   </td>
   </tr>  
   
   <tr>
   <td>Votre ou vos bénéficiaire(s)</td>
   <td>
   {% for benef in souscripteur.beneficiaires %}
   {{ benef.nom }} {{ benef.prenom }} <br/> 
   Née le :  {{ benef.datenaissance|date('d-m-Y') }} <br/><br/>  
   {% endfor %}
   </td>
   </tr>
   

   <tr>
   <td>Situation familiale</td>
   <td>{{ souscripteur.situationfamiliale}} <br/>
   {% if souscripteur.conjoint=="marie" 
  or souscripteur.conjoint =="pasce" 
  or souscripteur.conjoint =="concubin"  %}
      {{ souscripteur.conjoint.nom }}
      {{ souscripteur.conjoint.prenom }}
      {{ souscripteur.conjoint.datenaissance|date('d-m-Y') }}
{% endif %}
   </td>
