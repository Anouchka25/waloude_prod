   <tr>
   <td>Date de naissance</td>
   <td>{{ souscripteur.datenaissance|date('d-m-Y') }}</td>
   </tr>
   <tr>
   <td>Pays de naissance</td>
   <td>{{ souscripteur.paysnaissance|country_name('fr') }}</td>
   </tr>
   <tr>
   <td>Pays de résidence</td>
   <td>{{ souscripteur.paysresidence|country_name('fr') }}</td>
   </tr>
   <tr>
