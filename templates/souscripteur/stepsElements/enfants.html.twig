{% import "souscripteur/modele_enfant.html.twig" as formModelEnfant %}
<div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">{{ form_label(form.nombreenfants) }}</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              {{ form_widget(form.nombreenfants, {'attr': {'class':'input'}}) 
            }}
            </div>
            <div id="block_enfants" data-prototype="{{ formModelEnfant.enfantCollectionElt(form.enfants.vars.prototype)|e }}"></div>
                {% do form.enfants.setRendered %}
            </div>

            <small>{{ form_help(form.nombreenfants) }}</small>
          <div class="form-error">
            {{ form_errors(form.nombreenfants) }}
          </div>
          </div>

        </div>
      
